{
  "manifest_version": 3,
  "name": "多币种价格监控器",
  "version": "2.0",
  "description": "实时监控ETH、BTC、SOL价格，支持波动率分析和价格曲线显示",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.binance.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "多币种价格监控器"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 